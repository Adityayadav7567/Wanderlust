<%- layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form
      method="POST"
      action="/listings/<%= listing.id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          required
          value="<%= listing.description %>"
        />
        <div class="invalid-feedback">title should be required</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          rows="10"
          cols="20"
          class="form-control"
          required
        >
<%= listing.description %></textarea
        >
        <div class="invalid-feedback">please enter a short description</div>
      </div>

      <div class="mb-3 row col-4 mt-3">
        &nbsp;&nbsp;&nbsp;&nbsp;Original Listing Image <br />
        <img src="<%= listing.image.url %>" alt="" />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input type="file" name="listing[image]" class="form-control" />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            value="<%= listing.price %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">please enter a valid price</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            required
            class="form-control"
          />
          <div class="invalid-feedback">
            country name should be should be valid
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location] "
          class="form-control"
          required
          value="<%= listing.location %>"
        />
        <div class="invalid-feedback">
          location name should be should be valid
        </div>
      </div>
      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
    <br /><br />
  </div>
</div>
